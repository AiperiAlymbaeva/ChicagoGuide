<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image"
        android:text="Title"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/hide"
        android:src="@drawable/ic_baseline_arrow_drop_up_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="8dp" />
    <ImageView
        android:id="@+id/show"
        android:src="@drawable/ic_baseline_arrow_drop_down_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="8dp" />




    <ImageView
        android:id="@+id/desc_ic"
        style="@style/ImageView"
        android:src="@drawable/ic_info"
        android:layout_below="@id/image" />
    <TextView
        android:id="@+id/desc"
        style="@style/TextView"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/desc_ic"
        android:layout_marginBottom="14dp" />


    <ImageView
        android:id="@+id/time_ic"
        style="@style/ImageView"
        android:src="@drawable/ic_time"
        android:layout_below="@id/desc"
        android:layout_marginTop="0dp"/>
    <TextView
        android:id="@+id/hours"
        style="@style/TextView"
        android:layout_below="@id/desc"
        android:layout_toRightOf="@id/desc_ic"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/dollar_ic"
        style="@style/ImageView"
        android:src="@drawable/ic_dollar"
        android:layout_below="@id/desc"
        android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/price"
        style="@style/TextView"
        android:layout_below="@id/desc"
        android:layout_toRightOf="@id/desc_ic"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:id="@+id/map_ic"
        style="@style/ImageView"
        android:src="@drawable/ic_map"
        android:layout_below="@id/time_ic"
        android:layout_marginTop="13dp"/>
    <TextView
        android:id="@+id/maplink"
        style="@style/TextView"
        android:layout_below="@id/hours"
        android:textColor="#8BC34A"
        android:layout_toRightOf="@id/desc_ic"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/phone_ic"
        style="@style/ImageView"
        android:src="@drawable/ic_phone"
        android:layout_below="@id/dollar_ic"
        android:layout_marginTop="13dp"/>
    <TextView
        android:id="@+id/phonelink"
        style="@style/TextView"
        android:layout_below="@id/price"
        android:layout_toRightOf="@id/desc_ic"
        android:textColor="#8BC34A"
        android:layout_marginTop="0dp"/>






</RelativeLayout>


</androidx.cardview.widget.CardView>